<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.ListArmorFragment">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/armorToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/armorToolbar"
        android:id="@+id/recycleViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_gloves"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtName"
                android:layout_marginEnd="10dp"
                android:id="@+id/imgIconType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="TEST"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtResistance"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:text="TEST"
                app:layout_constraintEnd_toStartOf="@id/imgIconMale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgIconType" />

            <TextView

                android:layout_marginTop="20dp"
                android:text="TEST"
                android:id="@+id/txtDefense"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgIconMale"
                app:layout_constraintTop_toBottomOf="@id/txtResistance"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgIconDeco"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_deco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDefense" />

            <TextView

                android:id="@+id/txtSlots"
                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtDefense"
                app:layout_constraintStart_toEndOf="@id/imgIconDeco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgIconMale"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtName" />

            <ImageView
                android:id="@+id/imgIconFemale"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgIconMale" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>